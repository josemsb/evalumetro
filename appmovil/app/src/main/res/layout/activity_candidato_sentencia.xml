<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_collapseMode="none"
    tools:context=".Candidato.candidato_sentencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtEducacion_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Sentencias Penales"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="414dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclePenales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scrollbars="horizontal"
            android:soundEffectsEnabled="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:id="@+id/txtEducacion_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Otras Sentencias"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="414dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerNoObligatorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="100dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>